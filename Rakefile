namespace :pq do
  desc 'Object test generator'
  task :class do
    ruby 'lib/query.rb class'
  end

  desc 'Method test generator'
  task :method do
    ruby 'lib/query.rb method'
  end

  desc 'Invoke troubleshoot module from main pq command'
  task :help do
    ruby 'lib/query.rb help'
  end
end
